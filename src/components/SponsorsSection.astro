---
import { Image } from 'astro:assets'
import logoGerber from '../assets/images/logo-gerber.svg'
---

<section class="py-16">
  <div class="container mx-auto px-4 md:px-6">
    <h2
      class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl"
    >
      Sponsoren
    </h2>

    <div class="mx-auto max-w-7xl px-6 py-2 lg:px-8 lg:py-4">
      <div
        class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-4 gap-y-10 sm:max-w-xl sm:grid-cols-5 sm:gap-x-5 lg:mx-0 lg:max-w-none lg:grid-cols-5"
      >
        <a href="https://www.baertschihus.ch/">
          <img
            class="col-span-2 max-h-14 w-full object-contain lg:col-span-1"
            src="https://kulturverein-muri.ch/wp-content/uploads/baertschihus.png"
            alt="BÃ¤rtschi Hus"
            height="72"
          />
        </a>
        <a href="https://www.villamettlen.ch/">
          <img
            class="col-span-2 max-h-14 w-full object-contain lg:col-span-1"
            src="https://kulturverein-muri.ch/wp-content/uploads/villamettlen.jpg"
            alt="Reform"
            height="72"
          />
        </a>
        <a href="https://www.chinoworb.ch/">
          <img
            class="col-span-2 max-h-14 w-full object-contain lg:col-span-1"
            src="https://kulturverein-muri.ch/wp-content/uploads/chinoworb.png"
            alt="Chino Worb"
            height="72"
          />
        </a>
        <a href="https://www.gerberelektro.ch/">
          <Image src={logoGerber} alt="Gerber Elektro AG" height="72"/>

        </a>
        <a href="https://www.mobiliar.ch/generalagenturen/bern-ost#standorte">
          <img
            class="col-span-2 max-h-14 w-full object-contain sm:col-start-2 lg:col-span-1"
            src="https://kulturverein-muri.ch/wp-content/uploads/die_mobiliar.jpg"
            alt="die mobiliar"
            height="72"
          />
        </a>
      </div>
    </div>
  </div>
</section>
