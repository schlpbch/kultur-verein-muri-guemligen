---
import { Image } from 'astro:assets'
import heroImage from '../assets/images/the-sparklettes.png'
---

<section
  class="rounded-none bg-gradient-to-bl from-yellow-400 to-yellow-300 py-8 shadow-md 2xl:rounded-lg"
>
  <div class="container mx-auto px-8 sm:px-0 md:px-10">
    <div
      class="flex flex-col items-center justify-between gap-8 py-10 md:flex-row"
    >
      <div class="flex-1 text-center md:text-left">
        <h1
          class="mb-4 text-4xl font-bold tracking-tighter text-gray-900 md:text-5xl lg:text-6xl"
        >
          Kulturverein Muri Gümligen
        </h1>
        <p class="mb-6 text-xl text-gray-700 md:text-2xl">
          Mit Jazz in den Frühling.
        </p>
        <a href="#Programm">
          <button
            class="rounded-none bg-orange-700 px-3 py-2 text-lg tracking-tight text-white shadow-md transition-colors hover:bg-gray-800"
          >
            Zum Programm
          </button>
        </a>
      </div>
      <div class="flex-1">
        <Image src={heroImage} width={512} height={544} alt="The Sparklettes" />
      </div>
    </div>
  </div>
</section>
