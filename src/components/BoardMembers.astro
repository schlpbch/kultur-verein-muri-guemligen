  {
    name: 'Anna-Lisa Kirchhofer',
    role: 'Vizepräsidentin\nRessort Klassik',
    imageUrl: 'https://kulturverein-muri.ch/wp-content/uploads/ka.jpg',
  },
  {
    name: 'Christoph Burger',
    role: 'Finanzen',
    imageUrl: 'https://kulturverein-muri.ch/wp-content/uploads/bc.png',
  },
  {
    name: 'Philippe Candolfi',
    role: 'Entwicklung',
    imageUrl: 'https://kulturverein-muri.ch/wp-content/uploads/sk_08.png',
  },
  {
    name: 'Yvonne Gempeler',
    role: 'Kommunikation',
    imageUrl: 'https://kulturverein-muri.ch/wp-content/uploads/gy.jpg',
  },
  {
    name: 'Eloisa Hagen-Melo',
    role: 'Mitgliederbetreuung',
    imageUrl: 'https://kulturverein-muri.ch/wp-content/uploads/eh_12.jpg',
