---

<div
  class="mx-auto grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
>
  {
    boardMembers.map((member) => (
      <Card key={member.name} class="border-none shadow-none">
        <CardContent>
          <div class="pt-4">
            <Image
              src={member.imageUrl}
              alt={member.name}
              width={200}
              height={300}
              class="object-cover shadow-md"
              sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
            />
          </div>
        </CardContent>
        <CardHeader>
          <h3 class="text-md font-medium">{member.name}</h3>
          <p class="whitespace-pre-line text-muted-foreground">{member.role}</p>
        </CardHeader>
      </Card>
    ))
  }
</div>
